<!-- 內容 announce-banner -->  
<section class="announce-banner"> 
  <div class="content-background">
    <div class="content-banner">
      <!--img src="/image/content-banner-1.jpg" alt=""-->
      <%= image_tag ("image/content-banner-1.jpg"), alt: 'avatar' %> 
    </div>
  </div> 
</section>
<!-- 內容 announcement -->  
<section class="announcehomepage">
  <div class="container">
    <h4>最新消息</h4>
    
    <ul class="announce-navigation"> 
      <li><%= link_to "公告事項", announcehomepage_announcements_path %></li>
      <% @categories.each do |category| %>
        <% if category.name == @category.name %>
          <li><%= link_to category.name,category_path(category),style:"color:#1E90FF;"%> 
        <% else %>
          <li><%= link_to category.name,category_path(category) %></li>
        <% end %>
      <% end %>
    </ul> 

    <div class="announce-content">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th class="text-center col-md-2">發布日期</th>
            <th class="text-center col-md-2">類別</th>
            <th class="text-center col-md-8">標題</th>
          </tr>
        </thead>

        <tbody>
          <% @announcements.each do |announcement| %>
          <tr>
            <td class="col-md-2 text-center"><%= announcement.date %></td>
            <td class="col-md-2 text-center"><%= announcement.category.name %></td>
            <td class="col-md-8"><%= link_to announcement.title ,announcement_path(announcement) %></td>
          </tr>
          <% end %>  
        </tbody>
      </table>
    </div>

  </div>
</section>