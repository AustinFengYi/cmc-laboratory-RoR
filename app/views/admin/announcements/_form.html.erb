<%#====================錯誤訊息提示=============================  %>
<% if @announcement.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @announcement.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%#====================建立實驗室公告表格=============================  %>
<%= form_for [:admin, @announcement] do |f| %>
  <div class="field">
  <%= f.label :title, "公告標題" %><br>
  <%= f.text_field :title ,class:"form-control"%>
  </div>
  
  <div class="field">
  <%= f.label :date, "公告日期" %><br>
  <%= f.text_field :date ,class:"form-control"%>
  </div>

  
  <div class="field">
  <%= f.label :category_id, "公告分類" %><br>
  <%= f.collection_select :category_id , Category.all, :id, :name, {prompt: true}, {class: "form-control"}  %><br>
  </div>

  <div class="field">
    <%= f.label :description, "公告內容" %><br>
    <%= f.text_area :description, placeholder:"What's on your description ?", rows:"6",class:"form-control"  %>
  </div>

  <div class="field">
  <%#= f.label :image, "Photo" %><br>
  <%#= image_tag @restaurant.image, width:"200px" if @restaurant.image? %>
  <%#= f.file_field :image %>
  </div>

  <div class="field">
  <%= f.submit class:"btn btn-success"%>
  <%= link_to '取消',admin_root_path,class:"btn btn-danger" %>
  </div>
      
<% end %>