<!--  Index 最新消息 --> 
<section class="admin-index">
  <div class="container">
    <div class="col-md-12">

      <h4>最新消息</h4>

      <div class="index-announcement">
        <%= link_to "公告消息",admin_root_path %> |
        <%= link_to "公告分類",admin_categories_path %>
      </div>

      <%= link_to "新增消息",new_admin_announcement_path,class:"btn btn-warning" %>
      
      <div class="admin-announce-navigation">
        <ul class="admin-announce-navigation">
          <li><%= link_to "公告事項", admin_root_path,style:"color:#1E90FF;" %></li>
          <% @categories.each do |category| %>
            <li><%= link_to category.name,admin_category_path(category) %></li>
          <% end %>
        </ul> 
      </div>

      <table class="table table-striped table-bordered table-announcement">
        <thead>
          <tr>
            <th class="col-md-2 text-center">發布日期</th>
            <th class="col-md-2 text-center">類別</th>
            <th class="col-md-5 text-center">標題</th>
            <th class="col-md-1 text-center">內容</th>
            <th class="col-md-1 text-center">編輯</th>
            <th class="col-md-1 text-center">刪除</th>
          </tr>
        </thead>

        <tbody>
          <% @announcements.each do |announcement| %>
          <tr>
            <td class="text-center col-md-2"><%= announcement.date %></td>
            <td class="text-center col-md-2"><%= announcement.category.name %></td>
            <td class="text-center col-md-5"><strong><%= truncate(announcement.title,length:25) %></strong></td>
            <td class="text-center col-md-1"><%= link_to 'Show', admin_announcement_path(announcement) %></td>
            <td class="text-center col-md-1"><%= link_to 'Edit', edit_admin_announcement_path(announcement) %></td>
            <td class="text-center col-md-1"><%= link_to 'Delete', admin_announcement_path(announcement), method: :delete, data: { confirm: "Are you sure?"} %></td>
          </tr>
          <% end %>        
        </tbody>
      </table>
    </div>
  </div>
</section> 